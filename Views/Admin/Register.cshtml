@model AspCoreWebApp2309D.Models.Users

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<h1>Register</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
